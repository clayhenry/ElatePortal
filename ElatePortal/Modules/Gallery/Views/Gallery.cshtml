@model ElatePortal.Models.GalleryIndexModel
<!DOCTYPE html>
<html>
<body>
    <form method="post"  action="Upload" enctype="multipart/form-data" asp-controller="UploadController" asp-action="Post">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
    </body>
</html>
----------------------------------



@foreach (var image in Model.Images)
{

    <ul>

        <li><img src="@image.Url" /></li>
        <li> @image.Title </li>
        <li>
            Tags:
            @foreach (var tag in image.Tags)
            {
                <span> @tag.Description </span>

            }

        </li>

    </ul>

}
